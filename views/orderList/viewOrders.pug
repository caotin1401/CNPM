extends ../layout/layout.pug

block content
    h4 Name :
    -var i = 0;
    table.table
        th Number
        th Food
        th Amount
        th Note
            each food in foodList
                tr
                    -i = parseInt(i) + 1
                    td=i
                    td=food.name
                    td=lists.cart[food.id]
                    td=lists.note